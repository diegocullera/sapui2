<core:FragmentDefinition xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core" xmlns="sap.m">

    <Panel >
        <headerToolbar>
            <Toolbar>
                <core:Icon src="{=  ${incidenceModel>status} === '0' ? 'accept' :
                                    ${incidenceModel>status} === '1' ? 'alert' :
                                    ${incidenceModel>status} === '2' ? 'decline' : ''
                                }" ></core:Icon>
                <Title text="{i18n>incidence} {incidenceModel>index} {path:'incidenceModel>date', formatter:'.Formatter.dateFormat'}" ></Title>
                <ToolbarSpacer ></ToolbarSpacer>
                <core:Icon src="delete" press="onDeleteIncidence"></core:Icon>
            </Toolbar>
        </headerToolbar>
        <content>
            <HBox >
                <VBox class="sapUiSmallMarginEnd" >
                    <Text text="{i18n>incidenceDate}" ></Text>
                    <DatePicker dateValue="{incidenceModel>date}" ></DatePicker>
                </VBox>
                <VBox visible="{= ${incidenceModel>date} !== '' &amp;&amp; ${incidenceModel>date} !== undefined }" class="sapUiSmallMarginEnd" >
                    <Text text="{i18n>incidenceReason}" ></Text>
                    <Input ></Input>
                </VBox>
                <VBox visible="{= ${incidenceModel>date} !== '' &amp;&amp; ${incidenceModel>date} !== undefined }" class="sapUiSmallMarginEnd" >
                    <Text text="{i18n>incidenceType}" ></Text>
                    <Select selectedKey="{incidenceModel>status}" forceSelection="false" >
                        <core:Item key="0" text="{i18n>incidenceCorrect}" ></core:Item>
                        <core:Item key="1" text="{i18n>incidencePending}"></core:Item>
                        <core:Item key="2" text="{i18n>incidenceError}"></core:Item>
                    </Select>
                </VBox>
            </HBox>
        </content>
    
    </Panel>
</core:FragmentDefinition>