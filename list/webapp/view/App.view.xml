<mvc:View 
    controllerName="list.controller.App"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content >
                        <HBox >
                            <Label id="labelEmployee"
                                    labelFor="inputEmployee"
                                    text="{i18n>labelEmployee}" 
                                    class="sapUiSmallMarginEnd" />
                            <Input id="inputEmployee"
                                    value="{/EmployeeId}"
                                    maxLength="6"
                                    width="12.5rem"
                                    class="sapUiSmallMarginEnd" />

                            <Label id="labelCountry"
                                    labelFor="slCountry"
                                    text="{i18n>labelCountry}" 
                                    class="sapUiSmallMarginEnd" 
                                    visible="true" />
                            <Select id="slCountry" forceSelection="false" visible="true" selectedKey="{/CountryKey}"
                                        items="{/ListCountry}">
                                <items>
                                    <core:Item key="{Key}" text="{Text}"></core:Item>
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"></Button>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"></Button>
                        </HBox>
                        <HBox >
                            <Panel >
                                <Table id="tableEmployee" items="{/Employees}" >
                                    <columns>
                                    <Column >
                                            <header>
                                                <Label text="{i18n>tableId}" />
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableName}" />
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableCountry}" />
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableCity}" />
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text="{i18n>tableId}" />
                                            </header>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press="showPostalCode">
                                            <cells>
                                                <Label text="{EmployeeID}"></Label>
                                                <Label text="{LastName}, {FirstName}"></Label>
                                                <Label text="{Country}"></Label>
                                                <Label text="{City}"></Label>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
